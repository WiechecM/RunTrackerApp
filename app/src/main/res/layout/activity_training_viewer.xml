<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TrainingViewer">

    <include
        layout="@layout/toolbar"
        android:id="@+id/toolbar_view"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_view"
        android:fadeScrollbars="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:id="@+id/training_viewer_width"/>

            <fragment
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/training_viewer_map"
                class="com.google.android.libraries.maps.SupportMapFragment" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Data"
                android:textSize="40sp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>



            <GridLayout
                android:background="@drawable/round_gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:columnCount="3"
                android:rowCount="4"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:paddingLeft="5dp">


                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_timer"
                    android:layout_row="0"
                    android:layout_column="0"
                    android:layout_gravity="center"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="1"
                    android:layout_marginEnd="15dp"
                    android:text="Time"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="0"
                    android:layout_column="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_time"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="s"
                        android:textSize="25sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>



                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/ic_navigation"
                    android:layout_row="1"
                    android:layout_column="0"
                    android:layout_marginTop="10dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="1"
                    android:layout_marginEnd="15dp"
                    android:text="Distance"
                    android:layout_gravity="center_horizontal"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:layout_marginTop="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="1"
                    android:layout_column="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_dist"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_dist_unit"
                        android:text="km"
                        android:textSize="25sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_speed"
                    android:layout_row="2"
                    android:layout_column="0"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="1"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Av. speed"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="2"
                    android:layout_column="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_av_speed"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_av_speed_unit"
                        android:text="km/h"
                        android:textSize="25sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp" />

                </LinearLayout>

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginTop="10dp"
                    android:src="@drawable/ic_pace"
                    android:layout_row="3"
                    android:layout_column="0"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="1"
                    android:layout_marginEnd="15dp"
                    android:layout_marginTop="10dp"
                    android:text="Av. pace"
                    android:textSize="30sp"
                    android:textColor="@color/Black"
                    android:layout_gravity="center_horizontal" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_row="3"
                    android:layout_column="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_av_pace"
                        android:text="0"
                        android:textSize="30sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"
                        android:paddingEnd="5dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TV_av_pace_unit"
                        android:text="min/km"
                        android:textSize="25sp"
                        android:textColor="@color/Black"
                        android:layout_marginTop="10dp"/>

                </LinearLayout>

            </GridLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Midtimes"
                android:id="@+id/textViewMidTimes"
                android:textSize="40sp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>

                <Spinner
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="15dp"
                    android:scrollbarSize="35sp"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/training_viewer_interval_spinner"
                    android:entries="@array/intervals_metric"
                    android:layout_toEndOf="@id/textViewMidTimes"
                    android:layout_centerVertical="true"/>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/training_viewer_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/round_gray"
                android:orientation="vertical">


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Velocity chart"
                android:textSize="40sp"
                android:layout_marginHorizontal="50dp"
                android:layout_marginTop="10dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginHorizontal="15dp"
                android:background="@drawable/round_gray"
                android:paddingHorizontal="5dp"
                android:paddingTop="5dp">

                <com.jjoe64.graphview.GraphView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/graph"/>




            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/training_viewer_id"
                android:text="TEXT"
                android:layout_marginTop="10dp"
                android:textSize="15sp"
                android:layout_gravity="center_horizontal"/>



        </LinearLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>